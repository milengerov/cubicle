<main>
  <h1>Attach a new accessory</h1>
  <div class="form">
    <h2>{{currentCube.name}}</h2>
    <img class="cube" src="{{currentCube.imageUrl}}">
    <form action='/products/{{currentCube._id}}/attach' method="POST">
      <label for="accessory">Accessories</label>
      <select id="accessory" name="accessory">
        {{#each accessories}}
         <option value="{{_id}}">{{name}}</option>
        {{/each}}
      </select>
      <input type="submit" value="Attach">
    </form>
    <h3 class="italic">{{currentCube.description}}
    </h3>
    <a class="btn" href="/">Back</a>
  </div>
</main>